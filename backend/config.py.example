# Configuration Example
# Copy this to config.py and set your actual values
# DO NOT commit config.py to git!

# Flask Configuration
FLASK_ENV = 'production'  # or 'development'
DEBUG = False  # Always False in production

# JWT Secret Key - MUST be set via environment variable in production
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY = 'your-secret-key-change-this'

# Database Configuration
# For PythonAnywhere: Will use ~/ethioagri.db
# For local: Will use backend/ethioagri.db

# CORS Configuration
ALLOWED_ORIGINS = '*'  # In production, specify your domain: 'https://yourdomain.com'

